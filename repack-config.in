#!/bin/sh 
# 
# $Id: repack-config.in,v 1.3 2010/09/08 22:09:11 seb Exp $
# 
# @configure_input@

prefix="@prefix@"
exec_prefix="@exec_prefix@"
version="@VERSION@"
libs="-L@libdir@ @LIBS@"
cflags="-I @includedir@"

usage()
{
   cat << EOF 
usage: repack-config [OPTIONS]
Options:
    [--prefix]
    [--version]
    [--libs]
    [--cflags]
EOF
    exit $1
}


if test $# -eq 0 ; then 
    usage 1 1>& 2
fi



while test $# -gt 0 ; do 
    case $1 in
        -*=*)
        optarg=`echo $1 | sed 's/[-_a-zA-Z0-9]//'`
        ;;
        *)
        optarg=
        ;;
    esac
    
    case $1 in
        --prefix)
        echo $prefix 
        ;;
        --version)
        echo $version
        ;;
        --libs)
        echo $libs 
        ;;
        --cflags)
        echo $cflags 
        ;;
        *) 
        usage
    esac
    shift
done



